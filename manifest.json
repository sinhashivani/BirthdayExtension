{
    "manifest_version": 3,
    "name": "Birthday Subscriber",
    "version": "1.0.0",
    "description": "A basic Chrome extension that lets you join company loyalty programs easily.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils.js",
                "content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "bulk_autofill.html",
                "bulk_autofill.css",
                "bulk_autofill.js",
                "error_monitor.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}